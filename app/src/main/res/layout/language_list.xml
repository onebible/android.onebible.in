<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/language_row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/app_version_layout"
    android:background="@color/row_item_background"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/about_us_layout_padding"
    android:paddingLeft="@dimen/about_us_layout_padding"
    android:paddingRight="@dimen/about_us_layout_padding"
    android:paddingTop="@dimen/about_us_layout_padding"
    android:textAlignment="center">

    <LinearLayout
        android:id="@+id/lang_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lang_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView7"
            android:layout_weight="80"
            android:lineSpacingExtra="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/lang_action_delete"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_weight="20"
            android:src="@drawable/ic_delete_black_24dp" />

        <ImageView
            android:id="@+id/lang_action_download"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_weight="20"
            android:src="@drawable/ic_cloud_download_black_24dp" />

        <ImageView
            android:id="@+id/lang_action_cancel"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_weight="20"
            android:src="@drawable/ic_cancel_black_24dp" />

    </LinearLayout>

</LinearLayout>